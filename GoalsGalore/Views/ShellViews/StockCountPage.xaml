<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="GoalsGalore.Views.ShellViews.StockCountPage"
             Title="StockCountPage">
    <VerticalStackLayout Spacing="12" Padding="16">

        <!-- Example Item Card -->
        <telerik:RadBorder CornerRadius="12"
                       BorderColor="{StaticResource NeutralBorder}"
                       BackgroundColor="White"
                       Padding="16">

            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12">

                <!-- Delete Icon -->
                <Image Source="dotnet_bot.png"
                   WidthRequest="32"
                   HeightRequest="32"
                   VerticalOptions="Start"
                   Grid.RowSpan="3"
                   Grid.Column="0" />

                <!-- Item Header -->
                <Label Text="000000000361/4"
                   FontAttributes="Bold"
                   FontSize="14"
                   TextColor="{StaticResource TextDark}"
                   Grid.Column="1" Grid.Row="0" />

                <!-- Count Status Icon -->
                <Image Source="dotnet_bot.png"
                   WidthRequest="28"
                   HeightRequest="28"
                   Grid.Column="2" Grid.Row="0"
                   VerticalOptions="Start" />

                <!-- Item Description -->
                <Label Text="OEWAPP-TUT-CH-S"
                   FontSize="13"
                   TextColor="{StaticResource TextMuted}"
                   Grid.Column="1" Grid.Row="1" />

                <Label Text="Tutti Organic Cotton Bralette - Chestnut"
                   FontSize="13"
                   TextColor="{StaticResource TextMuted}"
                   Grid.Column="1" Grid.Row="2" />

                <!-- Qty Counted -->
                <Label Text="Qty Counted: 1"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="{StaticResource SuccessColor}"
                   Grid.Column="2" Grid.Row="2"
                   HorizontalOptions="End" />
            </Grid>
        </telerik:RadBorder>

        <!-- Add Item Card -->
        <telerik:RadBorder CornerRadius="12"
                       BorderColor="{StaticResource NeutralBorder}"
                       BackgroundColor="{StaticResource NeutralLight}"
                       Padding="16"
                       BorderThickness="2">

            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <Image Source="dotnet_bot.png"
                       WidthRequest="32"
                       HeightRequest="32" />
                <Label Text="Add Item"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryColor}"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </telerik:RadBorder>
    </VerticalStackLayout>
</ContentPage>