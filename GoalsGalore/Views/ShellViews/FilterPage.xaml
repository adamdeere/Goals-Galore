<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GoalsGalore.ViewModels"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             Shell.NavBarIsVisible="False"
             x:DataType="vm:FilterPageViewModel"
             x:Class="GoalsGalore.Views.ShellViews.FilterPage"
             Title="FilterPage">

    <telerik:RadBorder BorderThickness="1"
                       BorderColor="Blue"
                       BackgroundColor="White"
                       VerticalOptions="Start"
                       HorizontalOptions="Center">

        <Grid RowDefinitions="Auto,*,Auto"
              RowSpacing="5">
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0"
                                 BackgroundColor="#131948"
                                 HorizontalOptions="Fill">
                <Label Text="Unload Details"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold" />
            </VerticalStackLayout>

            <!-- Content -->
            <ScrollView Grid.Row="1">
                <Grid RowDefinitions="*,*">

                    <Grid HorizontalOptions="Center"
                          RowDefinitions="Auto, Auto, Auto, Auto">

                        <telerik:RadBorder BorderThickness="0,0,0, 1"
                                           HorizontalOptions="Fill"
                                           BorderColor="Red">

                            <Label Text="Item Details"
                                   HorizontalOptions="Center"
                                   FontAttributes="Bold"
                                   FontSize="16" />
                        </telerik:RadBorder>

                        <Label Grid.Row="1"
                               Text="GRN: 0000000000367/1" />

                        <Label Grid.Row="2"
                               Text="SKU: TEST" />

                        <Label Grid.Row="3"
                               Text="Desc: TEST PRODUCT" />
                    </Grid>

                    <VerticalStackLayout Grid.Row="1"
                                         Spacing="10">

                        <Label Text="Measure:" FontAttributes="Bold" />
                        <telerik:RadListPicker x:Name="cartonpicker"
                                           Placeholder="Select Carton, Inner, or Piece"
                                           ItemsSource="{Binding Items}"
                                           SelectedItem="{Binding SelectedItem}"
                                           PickerMode="Popup"
                                           DisplayMemberPath="Text"
                                           IsLooping="False"
                                           VerticalOptions="Center"
                                           ItemTemplate="{StaticResource ListPickerData}">

                            <telerik:RadListPicker.PopupSettings>

                                <telerik:PickerPopupSettings HeaderStyle="{StaticResource headerStyle}"
                                                         HeaderLabelStyle="{StaticResource headerLabelStyle}"
                                                         AcceptCommand="{Binding UnitOfMeasureSelectionChangedCommand}"
                                                         AcceptCommandParameter="{x:Reference cartonpicker}"
                                                         PopupOutsideBackgroundColor="#D9D9D9CC"
                                                         IsPopupModal="True"
                                                         HeaderLabelText="Select measurement" />
                            </telerik:RadListPicker.PopupSettings>
                        </telerik:RadListPicker>

                        <Label Text="Condition:" FontAttributes="Bold" />
                        <telerik:RadListPicker x:Name="DetailsCondition"
                                           Placeholder="Select goods condition"
                                           ItemsSource="{Binding ConditionItems}"
                                           PickerMode="Popup"
                                           VerticalOptions="Center"
                                           DisplayMemberPath="Text"
                                           IsLooping="False"
                                           ItemTemplate="{StaticResource ListPickerData}">

                            <telerik:RadListPicker.PopupSettings>
                                <telerik:PickerPopupSettings HeaderStyle="{StaticResource headerStyle}"
                                                         HeaderLabelStyle="{StaticResource headerLabelStyle}"
                                                         PopupOutsideBackgroundColor="#D9D9D9CC"
                                                         IsPopupModal="True"
                                                         HeaderLabelText="Select condition"
                                                         AcceptCommand="{Binding ConditionSelectionChangedCommand}"
                                                         AcceptCommandParameter="{x:Reference DetailsCondition}" />
                            </telerik:RadListPicker.PopupSettings>
                        </telerik:RadListPicker>
                        <Label Text="Qty Cartons:" FontAttributes="Bold" />

                        <telerik:RadEntry x:Name="DetailsQuantity"
                                      Text="{Binding Quantity}"
                                      Placeholder="Enter Quantity"
                                      AutomationId="DetailsQuantity"
                                      Keyboard="Numeric"
                                      Margin="0,0,10,0"
                                      VerticalOptions="Center"
                                      SelectionOnFocus="SelectAll" />

                        <Label Text="Inners Per Carton:" FontAttributes="Bold" />

                        <telerik:RadEntry x:Name="DetailsMeasure"
                                      Text="{Binding QuantityPerCarton}"
                                      Placeholder="Enter Qty Per Carton"
                                      AutomationId="DetailsQuantityPerCarton"
                                      Keyboard="Numeric"
                                      Margin="0,0,10,0"
                                      VerticalOptions="Center"
                                      SelectionOnFocus="SelectAll" />

                        <Label Text="Pieces Per Inner:" FontAttributes="Bold" />
                        <telerik:RadEntry x:Name="DetailsQuantityPerInner"
                                      Text="{Binding DetailsQuantityPerInner}"
                                      Placeholder="Enter Qty Per Inner"
                                      AutomationId="DetailsQuantityPerInner"
                                      Keyboard="Numeric"
                                      Margin="0,0,10,0"
                                      VerticalOptions="Center"
                                      SelectionOnFocus="SelectAll" />
                    </VerticalStackLayout>
                </Grid>
            </ScrollView>

            <!-- Footer Buttons -->
            <Grid Grid.Row="2" ColumnDefinitions="*,*"
                  Padding="5" ColumnSpacing="10"
                  BackgroundColor="Chocolate"
                  VerticalOptions="End">

                <telerik:RadButton Text="Cancel"
                                   BackgroundColor="#1E293B"
                                   TextColor="White"
                                   CornerRadius="8"
                                   Grid.Column="0" />

                <telerik:RadButton Text="Confirm"
                                   BackgroundColor="#00b7bd"
                                   TextColor="White"
                                   CornerRadius="8"
                                   Grid.Column="1" />
            </Grid>
        </Grid>
    </telerik:RadBorder>
</ContentPage>