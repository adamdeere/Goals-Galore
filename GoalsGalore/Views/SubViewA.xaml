<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:vm="clr-namespace:GoalsGalore.ViewModels.MainViewModels"
             xmlns:model="clr-namespace:GoalsGalore.Model"
             x:DataType="vm:ViewModelA"
             x:Class="GoalsGalore.Views.SubViewA">

    <CollectionView ItemsSource="{Binding StockItems}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:StockItem">

                <controls:RadBorder Padding="10"
                                    Margin="5"
                                    BorderColor="Aqua"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    BackgroundColor="Gainsboro">
                    <Grid>
                        <VerticalStackLayout>

                            <Label Text="{Binding SKUCode}"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark=LightGray}"
                                   FontAttributes="Bold"
                                   FontSize="20" />

                            <Label Text="{Binding SKUDescription}" />

                            <Label Text="{Binding GRN, StringFormat='GRN: {0}'}" />

                            <Label Text="{Binding LocationCode, StringFormat='Location: {0}'}" />

                            <Label Text="{Binding Batch, StringFormat='Batch: {0}'}" />

                            <Label Text="{Binding StockStatus, StringFormat='Status: {0}'}" />

                            <Label Text="{Binding QtyFree, StringFormat='Available: {0}'}"
                                   FontAttributes="Bold"/>


                        </VerticalStackLayout>

                        <!-- Context menu trigger + 'Original' label -->
                        <Grid HorizontalOptions="End"
                              RowDefinitions="*,*">

                            <controls:RadButton Text="â‹®"
                                                VerticalOptions="Start"
                                                FontSize="24"
                                                BackgroundColor="Transparent"
                                                TextColor="Black"
                                                IsVisible="{Binding ShowContextMenu}"
                                                Command="{Binding ShowMenuCommand}" />

                            <Label Text="Original"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark=LightGray}"
                                   IsVisible="{Binding IsOriginal}"
                                   VerticalOptions="End"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,5"
                                   Grid.Row="1"/>
                        </Grid>
                    </Grid>
                </controls:RadBorder>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
   
</ContentView>
