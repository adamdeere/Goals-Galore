<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Brand Colors -->
    <Color x:Key="Primary">#131948</Color>
    <Color x:Key="PrimaryLight">#1F2A66</Color>
    <Color x:Key="PrimaryDark">#0D1232</Color>

    <Color x:Key="AvatarColor">#28A745</Color>

    <Color x:Key="Secondary">#00B7BD</Color>
    <Color x:Key="SecondaryLight">#33C6CB</Color>
    <Color x:Key="SecondaryDark">#009399</Color>

    <Color x:Key="Tertiary">#6C4AB6</Color>
    <Color x:Key="TertiaryLight">#8D6FD1</Color>
    <Color x:Key="TertiaryDark">#4A2D84</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="SuccessLight">#5CD36F</Color>
    <Color x:Key="SuccessDark">#1C7C32</Color>

    <Color x:Key="WarningColor">#F5A623</Color>
    <Color x:Key="WarningLight">#F8C45C</Color>
    <Color x:Key="WarningDark">#C97E0D</Color>

    <Color x:Key="DangerColor">#DC3545</Color>
    <Color x:Key="DangerLight">#F3707E</Color>
    <Color x:Key="DangerDark">#A41E2A</Color>

    <!-- Neutrals -->
    <Color x:Key="NeutralLight">#F5F7FA</Color>
    <Color x:Key="NeutralBorder">#E0E6ED</Color>
    <Color x:Key="TextDark">#2C3E50</Color>
    <Color x:Key="TextMuted">#95A5A6</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="BackgroundLight">#D3D3D3</Color>

    <Color x:Key="SecondaryDarkText">#9880e5</Color>

    <Color x:Key="PrimaryColor">#2C3E50</Color>

    <Color x:Key="DividerColor">#DFE6E9</Color>

