<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Label style used by both LabeledRadEntry & LabeledRadEditor -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="#131948" />
        <!-- matches your primary -->
    </Style>

    <!-- Error label style -->
    <Style x:Key="ErrorLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="Crimson" />
    </Style>

    <!-- Default border color -->
    <Color x:Key="FormBorderColor">#E3E7EE</Color>

    <!-- Background for input fields -->
    <Color x:Key="FormBackgroundColor">White</Color>
</ResourceDictionary>