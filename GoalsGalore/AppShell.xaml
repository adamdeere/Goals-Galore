<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="GoalsGalore.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:GoalsGalore.Views.ShellViews"
       Title="GoalsGalore">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>

        <Grid Style="{StaticResource FlyoutHeaderStyle}"
              RowDefinitions="Auto,Auto,Auto">

            <Label Text="Platinum WMS Swift"
                   Style="{StaticResource FlyoutTitleStyle}"
                   HorizontalOptions="Center" />

            <Image Grid.Row="2"
                   Source="dotnet_bot.png"
                   HeightRequest="64" WidthRequest="64"
                   HorizontalOptions="Center" />

            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     Color="{StaticResource DividerColor}"
                     HorizontalOptions="Fill" />
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="StockCountPage" />

    <!-- Flyout Items -->
    <ShellContent Title="Tasks"
                  Icon="dotnet_bot.png"
                  Route="FilterPage"
                  ContentTemplate="{DataTemplate local:FilterPage}" />

    <!-- Logout -->
    <MenuItem Text="Logout"
              Style="{StaticResource FlyoutLogoutStyle}" />
</Shell>